<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout
        android:id="@+id/ptr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/background_light"
            android:padding="8dp"
            android:scrollbarStyle="outsideInset" >

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/nameA"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/washersA"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/washIndicatorA"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:background="@android:color/holo_blue_dark"
                        android:gravity="center" >
                    </TextView>

                    <TextView
                        android:id="@+id/washerAvailA"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_green_dark"
                        android:gravity="center"
                        android:text="@string/zero" >
                    </TextView>

                    <TextView
                        android:id="@+id/washerCompleteA"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_orange_dark"
                        android:gravity="center"
                        android:text="@string/zero" >
                    </TextView>

                    <TextView
                        android:id="@+id/washerInUseA"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_red_dark"
                        android:gravity="center"
                        android:text="@string/zero" >
                    </TextView>
                </TableRow>

                <TableRow
                    android:id="@+id/lineA"
                    android:layout_height="1dp"
                    android:background="@android:color/black" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_span="2" >
                    </View>
                </TableRow>

                <TableRow
                    android:id="@+id/dryersA"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp" >

                    <TextView
                        android:id="@+id/dryerIndicatorA"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:background="@android:color/darker_gray"
                        android:gravity="center" >
                    </TextView>

                    <TextView
                        android:id="@+id/dryerAvailA"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_green_dark"
                        android:gravity="center"
                        android:text="@string/zero" >
                    </TextView>

                    <TextView
                        android:id="@+id/dryerCompleteA"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_orange_dark"
                        android:gravity="center"
                        android:text="@string/zero" >
                    </TextView>

                    <TextView
                        android:id="@+id/dryerInUseA"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_red_dark"
                        android:gravity="center"
                        android:text="@string/zero" >
                    </TextView>
                </TableRow>

                <TableRow
                    android:id="@+id/TableRow04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70sp" >

                    <TextView
                        android:id="@+id/nameB"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_weight="100"
                        android:gravity="center"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/washersB"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/washerIndicatorA"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:background="@android:color/holo_blue_dark"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/washerAvailB"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_green_dark"
                        android:gravity="center"
                        android:text="@string/zero" />

                    <TextView
                        android:id="@+id/washerCompleteB"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_orange_dark"
                        android:gravity="center"
                        android:text="@string/zero" />

                    <TextView
                        android:id="@+id/washerInUseB"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_red_dark"
                        android:gravity="center"
                        android:text="@string/zero" />
                </TableRow>

                <TableRow
                    android:id="@+id/lineB"
                    android:layout_height="1dp"
                    android:background="@android:color/black" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_span="2" />
                </TableRow>

                <TableRow
                    android:id="@+id/dryersB"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/dryerIndicatorB"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:background="@android:color/darker_gray"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/dryerAvailB"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_green_dark"
                        android:gravity="center"
                        android:text="@string/zero" />

                    <TextView
                        android:id="@+id/dryerCompleteB"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_orange_dark"
                        android:gravity="center"
                        android:text="@string/zero" />

                    <TextView
                        android:id="@+id/dryerInUseB"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="32"
                        android:background="@android:color/holo_red_dark"
                        android:gravity="center"
                        android:text="@string/zero" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pulldown"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/availColor"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:background="@android:color/holo_green_dark"
                android:text="" />

            <TextView
                android:id="@+id/availDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:text="@string/avail" />

            <TextView
                android:id="@+id/completeColor"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:background="@android:color/holo_orange_dark"
                android:text="" />

            <TextView
                android:id="@+id/completeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:text="@string/complete" />

            <TextView
                android:id="@+id/inUseColor"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:background="@android:color/holo_red_dark"
                android:text="" />

            <TextView
                android:id="@+id/inUseDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:text="@string/inUse" />

            <TextView
                android:id="@+id/washerColor"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:background="@android:color/holo_blue_dark"
                android:text="" />

            <TextView
                android:id="@+id/washerDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:text="@string/washer" />

            <TextView
                android:id="@+id/dryerColor"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:background="@android:color/darker_gray"
                android:text="" />

            <TextView
                android:id="@+id/dryerDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:text="@string/dryer" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>