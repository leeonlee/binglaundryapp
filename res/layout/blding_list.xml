<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/background_light"
        android:paddingTop="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/nameA"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="100"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/statusA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:background="@android:color/holo_blue_dark" >
            </Button>

            <Button
                android:id="@+id/washerAvailA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="32"
                android:background="@android:color/holo_green_dark"
                android:text="@string/zero" >
            </Button>

            <Button
                android:id="@+id/washerCompleteA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="32"
                android:background="@android:color/holo_orange_dark"
                android:text="@string/zero" >
            </Button>

            <Button
                android:id="@+id/washerInUseA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="32"
                android:background="@android:color/holo_red_dark"
                android:text="@string/zero" >
            </Button>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/dryerAvailA"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:background="@android:color/darker_gray"
                android:textSize="12sp" >
            </Button>

            <Button
                android:id="@+id/dryerCompleteA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@android:color/holo_green_dark"
                android:text="@string/zero" >
            </Button>

            <Button
                android:id="@+id/dryerInUseA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@android:color/holo_orange_dark"
                android:text="@string/zero" >
            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:background="@android:color/holo_red_dark"
                android:text="@string/zero" >
            </Button>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Hold the screen to refresh"
        android:textSize="12sp" />

</RelativeLayout>